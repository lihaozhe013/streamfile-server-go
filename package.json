{
  "name": "streamfile-server-go",
  "version": "1.0.0",
  "description": "A lightweight file server written in Go",
  "main": "index.js",
  "scripts": {
    "install:all": "npm i && cd src/frontend/markdown-viewer && npm i",
    "build": "npm run clean && npm run build-css-prod && npm run build:markdown-viewer && go build && node scripts/post-build.js",
    "build:markdown-viewer": "cd src/frontend/markdown-viewer && npm run build",
    "build:prod": "npm run build && node scripts/post-build-prod.js",
    "clean": "node scripts/clean.js",
    "build-css": "postcss ./src/frontend/input.css -o ./public/styles.css --watch",
    "build-css-prod": "postcss ./src/frontend/input.css -o ./public/styles.css"
  },
  "keywords": [
    "go",
    "file-server",
    "tailwindcss"
  ],
  "author": "lihaozhe013",
  "license": "MIT",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.15",
    "@types/node": "^24.9.1",
    "autoprefixer": "^10.4.21",
    "fs-extra": "11.3.2",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^4.1.15"
  }
}
